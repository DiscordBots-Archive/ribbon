{
  "extends": [
    "@favware"
  ],
  "parserOptions": {
    "createDefaultProgram": true
  },
  "rules": {
    "@typescript-eslint/no-namespace": "off",
    "no-throw-literal": "off",
    "new-cap": [
      "error",
      {
        "capIsNewExceptionPattern": "^[A-Z][a-z]+(?:[A-Z][a-z]+)*$"
      }
    ]
  }
}