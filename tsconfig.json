{
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "src/",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["esnext","dom"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@root/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@databases/*": ["src/data/databases/*"],
      "@pokedex/*": ["src/data/dex/*"]
    },
    "typeRoots": ["typings","./node_modules/@types"]
  },
  "include": ["src"]
}