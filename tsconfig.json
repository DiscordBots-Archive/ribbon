{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": "src/",
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["esnext","dom"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "lf",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "incremental": true,
    "removeComments": true,
    "baseUrl": "src",
    "paths": {
      "@databases/*": ["lib/databases/*"],
      "@dex/*": ["lib/dex/*"],
      "@extensions/*": ["lib/extensions/*"],
      "@settings/*": ["lib/typings/settings/*"],
      "@structures/*": ["lib/structures/*"],
      "@typeorm/*": ["lib/typeorm/*"],
      "@typings/*": ["lib/typings/*"],
      "@utils/*": ["lib/utils/*"]
    }
  },
  "include": ["src"]
}