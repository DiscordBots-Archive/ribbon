{
  "name": "@favware/ribbon",
  "version": "11.0.0",
  "description": "feature rich, modular Discord.JS + Klasa server bot",
  "author": "@favware",
  "license": "MIT",
  "private": true,
  "main": "./dist/app.js",
  "homepage": "https://favware.tech/ribbon",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favware/ribbon.git"
  },
  "bugs": {
    "url": "https://github.com/favware/ribbon/issues"
  },
  "scripts": {
    "lint": "eslint src scripts --fix --ext ts",
    "clean": "rimraf ./dist",
    "prebuild": "yarn clean && yarn lint",
    "build": "tsc",
    "postbuild": "yarn copyfiles && yarn replace",
    "start": "cross-env NODE_ENV=development ts-node ./src/app.ts",
    "start:prod": "cross-env NODE_ENV=production ts-node ./src/app.ts",
    "start:js": "yarn build && cross-env NODE_ENV=development node ./dist/app.js",
    "serve": "pm2 start pm2.ecosystem.yml --env production",
    "serve:dev": "pm2 start pm2.ecosystem.yml",
    "rebuild": "yarn reload",
    "copyfiles": "concurrently \"yarn copyfiles:fonts\" \"yarn copyfiles:databases\" \"yarn copyfiles:env\" \"yarn copyfiles:dex\"",
    "replace": "yarn replace:ts-flag && yarn replace:commands-path && yarn replace:types-path",
    "copyfiles:fonts": "copyfiles -u 1 ./src/data/fonts/* ./dist",
    "copyfiles:databases": "copyfiles -u 1 ./src/data/databases/* ./dist",
    "copyfiles:env": "copyfiles -u 1 ./src/.env ./dist",
    "copyfiles:dex": "copyfiles -u 1 ./src/data/dex/*.json ./dist",
    "replace:ts-flag": "replace --silent \"typescript: true,\" \"typescript: false,\" ./dist/Ribbon.js",
    "replace:commands-path": "replace --silent \".registerCommandsIn\\({\\n\\s+dirname.+\\n\\s+filter.+\\n\\s+}\\);\" \".registerCommandsIn(path_1.default.join(__dirname, 'commands'));\" ./dist/Ribbon.js",
    "replace:types-path": "replace --silent \".registerTypesIn\\({\\n\\s+dirname.+\\n\\s+filter.+\\n\\s+}\\)\" \".registerTypesIn(path_1.default.join(__dirname, 'components/commandoTypes'))\" ./dist/Ribbon.js",
    "up": "yarn upgrade-interactive --latest",
    "commit": "git-cz",
    "cz": "git-cz",
    "release": "standard-version",
    "push": "git push --follow-tags origin master",
    "publish": "git push --follow-tags origin master && npm publish",
    "scripts:reload": "babel-node scripts/reloader --extensions \".ts\""
  },
  "keywords": [
    "bot",
    "discord",
    "discord.js",
    "klasa",
    "Favna",
    "NodeJS",
    "TypeScript",
    "Ribbon"
  ],
  "engines": {
    "node": "^11",
    "npm": ">=6"
  },
  "dependencies": {
    "@favware/converter": "^1.0.4",
    "@favware/querystring": "^3.0.2",
    "@favware/unescape": "^1.0.3",
    "@favware/ytdl-prismplayer": "^2.2.0",
    "@favware/zalgo": "^1.0.3",
    "booru": "^2.0.3",
    "cheerio": "^1.0.0-rc.3",
    "common-tags": "^1.8.0",
    "didyoumean2": "^3.1.2",
    "discord.js": "favna/discord.js#master",
    "dotenv": "^8.1.0",
    "emoji-regex": "^8.0.0",
    "erlpack": "discordapp/erlpack",
    "fast-levenshtein": "^2.0.6",
    "firebase-admin": "8.4.0",
    "fuse.js": "^3.4.5",
    "interval-promise": "^1.3.0",
    "jimp": "^0.6.4",
    "klasa": "dirigeants/klasa",
    "libsodium-wrappers": "^0.7.5",
    "module-alias": "^2.2.1",
    "moment": "^2.24.0",
    "moment-duration-format": "^2.3.2",
    "node-fetch": "^2.6.0",
    "node-opus": "^0.3.2",
    "prism-media": "^1.0.2",
    "qrcode": "^1.4.1",
    "reflect-metadata": "^0.1.13",
    "sagiri": "^2.0.2",
    "slot-machine": "^2.1.0",
    "speedtest-net": "^1.5.1",
    "sqlite3": "^4.1.0",
    "table": "^5.4.6",
    "turndown": "^5.0.3",
    "typeorm": "^0.2.18",
    "ytdl-core": "^0.29.5",
    "zlib-sync": "^0.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@favware/eslint-config": "^3.0.2",
    "@google-cloud/firestore": "^2.2.7",
    "@types/cheerio": "^0.22.13",
    "@types/common-tags": "^1.8.0",
    "@types/dotenv": "^6.1.1",
    "@types/fast-levenshtein": "^0.0.1",
    "@types/glob": "^7.1.1",
    "@types/jsonfile": "^5.0.0",
    "@types/libsodium-wrappers": "^0.7.5",
    "@types/module-alias": "^2.0.0",
    "@types/moment-duration-format": "^2.2.2",
    "@types/node": "^12.7.2",
    "@types/node-fetch": "^2.5.0",
    "@types/qrcode": "^1.3.4",
    "@types/sqlite3": "^3.1.5",
    "@types/table": "^4.0.6",
    "@types/turndown": "^5.0.0",
    "@types/ws": "^6.0.2",
    "@types/yargs-interactive": "^2.1.0",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.2",
    "copyfiles": "^2.1.1",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "3.0.2",
    "eslint": "^6.2.1",
    "glob": "^7.1.4",
    "jsonfile": "^5.0.0",
    "replace": "^1.1.1",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.0",
    "terser": "^4.2.0",
    "ts-node": "^8.3.0",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3",
    "utility-types": "^3.7.0",
    "yargs-interactive": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
